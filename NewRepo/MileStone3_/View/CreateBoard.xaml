<Window x:Class="Frontend.View.CreateBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.View"
        mc:Ignorable="d"
        Title="Create Board" Height="200" Width="500"
        Background="#FF1F2B3A">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Input Section -->
        <StackPanel Margin="10">
            <TextBlock Text="Enter board name:" Foreground="White" />
            <TextBox Text="{Binding Path=NewBoardName, Mode=TwoWay}" Margin="0,5,0,0" 
                     Background="#2D3B46" Foreground="White" BorderBrush="#5A5A5A" />
            <Label Content="{Binding Path=Message, Mode=OneWay}" Foreground="Red" 
                   HorizontalAlignment="Center" Margin="5" />
        </StackPanel>

        <!-- Buttons Section -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="10">
            <Button Content="Add" Width="75" Margin="0,0,5,0" 
                    Click="Add_Click"/>
            <Button Content="Cancel" Width="75" 
                     Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
